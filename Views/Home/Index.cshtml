@model FakeAPIMVC.Models.ProductViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Listado de Productos</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Product Name</th>
                <th scope="col">Image</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Products.Count; i++)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td>@Model.Products[i].Title</td>
                    <td><img src="@Model.Products[i].Image" alt="@Model.Products[i].Title" class="img-thumbnail" style="max-width: 100px;" /></td>        
                    <td>@Model.Products[i].Price.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
</div>